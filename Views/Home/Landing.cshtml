@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Expense - Manage your global spend</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <style>
        :root {
            --bg-main: #121212;
            --accent-primary: #4e9eff;
            --accent-secondary: #9e4eff;
            --text-main: #e0e0e0;
            --text-muted: #9ca3af;
            --cta-hover: #2563eb;
        }
        body {
            min-height: 100vh;
            background: var(--bg-main);
            font-family: 'Inter', sans-serif;
            color: var(--text-main);
        }
        .navbar {
            background: rgba(30, 30, 30, 0.95);
            box-shadow: 0 4px 24px 0 rgba(78, 158, 255, 0.08);
            border-radius: 1.5rem;
            margin: 1.5rem auto 2rem auto;
            max-width: 1200px;
        }
        .navbar-brand {
            font-weight: 700;
            font-size: 1.7rem;
            color: var(--accent-primary) !important;
            letter-spacing: 1px;
            display: flex;
            align-items: center;
        }
        .navbar-brand .icon {
            width: 2rem;
            height: 2rem;
            background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-secondary) 100%);
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-right: 0.5rem;
        }
        .nav-link {
            color: var(--text-muted) !important;
            font-weight: 500;
            margin-right: 1.2rem;
            transition: color 0.2s;
        }
        .nav-link:hover, .nav-link.active {
            color: var(--accent-primary) !important;
        }
        .btn-cta {
            background: var(--accent-primary);
            color: #fff;
            border-radius: 999px;
            font-weight: 600;
            box-shadow: 0 2px 8px 0 rgba(78, 158, 255, 0.10);
            transition: background 0.2s, box-shadow 0.2s, transform 0.2s;
            border: none;
        }
        .btn-cta:hover {
            background: var(--cta-hover);
            box-shadow: 0 4px 16px 0 rgba(37, 99, 235, 0.18);
            transform: translateY(-2px) scale(1.04);
        }
        .btn-outline-cta {
            background: transparent;
            color: var(--accent-primary);
            border: 1px solid var(--accent-primary);
            border-radius: 999px;
            font-weight: 600;
            padding: 0.6rem 2rem;
            transition: background 0.2s, color 0.2s, box-shadow 0.2s, transform 0.2s;
        }
        .btn-outline-cta:hover {
            background: rgba(78, 158, 255, 0.08);
            color: #fff;
            box-shadow: 0 2px 8px 0 rgba(78, 158, 255, 0.10);
            transform: translateY(-2px) scale(1.04);
        }
        .hero-section {
            min-height: 60vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            margin-bottom: 2.5rem;
        }
        .hero-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--text-main);
            margin-bottom: 1.2rem;
        }
        .hero-subtitle {
            color: var(--text-muted);
            font-size: 1.15rem;
            margin-bottom: 2.2rem;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }
        .dashboard-preview {
            background: #18181b;
            border-radius: 2rem;
            box-shadow: 0 8px 32px 0 rgba(78, 158, 255, 0.10);
            padding: 2rem;
            max-width: 900px;
            margin: 0 auto 2rem auto;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .dashboard-img {
            width: 100%;
            max-width: 800px;
            border-radius: 1.5rem;
            box-shadow: 0 4px 24px 0 rgba(78, 158, 255, 0.12);
        }
        @@media (max-width: 991px) {
            .dashboard-preview {
                padding: 1rem;
            }
            .dashboard-img {
                max-width: 100%;
            }
        }
        @@media (max-width: 600px) {
            .navbar {
                margin: 1rem auto 1.5rem auto;
                padding: 0.5rem 1rem !important;
                border-radius: 1rem;
            }
            .navbar-brand {
                font-size: 1.2rem;
            }
            .navbar-brand .icon {
                width: 1.3rem;
                height: 1.3rem;
                margin-right: 0.3rem;
            }
            .hero-title {
                font-size: 1.3rem;
                margin-bottom: 0.8rem;
            }
            .hero-subtitle {
                font-size: 0.95rem;
                margin-bottom: 1.2rem;
            }
            .btn-cta {
                width: 100%;
                font-size: 1rem;
                padding: 0.9rem 0;
                margin-bottom: 1.5rem;
            }
            .dashboard-preview {
                padding: 0.3rem;
                margin-top: 1.5rem;
                border-radius: 1rem;
            }
            .dashboard-img {
                border-radius: 0.8rem;
            }
        }
        .navbar-toggler {
            border: none;
            background: transparent;
            outline: none;
        }
        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(78,158,255, 1)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }
    </style>
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg px-4 py-3" data-aos="fade-down">
        <a class="navbar-brand" href="#">
            <span class="icon">
                <svg width="20" height="20" fill="none" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" fill="#fff" /></svg>
            </span>
            Expense
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
            </ul>
            <div class="d-flex gap-2">
                <a href="/login" class="btn btn-outline-cta px-4 py-2 me-2" data-aos="zoom-in" data-aos-delay="400">Login</a>
                <a href="/signup" class="btn btn-cta px-4 py-2" data-aos="zoom-in" data-aos-delay="500">Sign up</a>
            </div>
        </div>
    </nav>
    <!-- Hero Section -->
    <section class="hero-section" data-aos="fade-up">
        <h1 class="hero-title" data-aos="fade-up" data-aos-delay="100">Easily manage & control your global spend</h1>
        <div class="hero-subtitle" data-aos="fade-up" data-aos-delay="200">
            From instant money transfers to managing bills & creating virtual cards, save on hidden fees when you send with Mynt.
        </div>
        <div class="d-flex flex-wrap justify-content-center gap-3">
            <a href="/signup" class="btn btn-cta px-5 py-3 me-2 mb-2" data-aos="zoom-in" data-aos-delay="300">Get started</a>
        </div>
    </section>
    <!-- Dashboard Preview Section -->
    <section class="dashboard-preview" data-aos="fade-up" data-aos-delay="400">
        <img src="~/homePage.png" alt="Dashboard Preview" class="dashboard-img" />
    </section>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
      AOS.init({
        once: true,
        duration: 900,
        offset: 80,
      });
    </script>
</body>
</html> 